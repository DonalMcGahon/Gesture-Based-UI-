<Page
    x:Class="MyoApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyoApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="assets/appBack.jpg"/>
        </Grid.Background>
        <Image x:ConnectionId='1' x:Name="image" Source="assets/piano.png" Margin="230,30,220,9" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto">
            <Image.RenderTransform>
                <CompositeTransform Rotation="-0.541" ScaleX="1" ScaleY="1"/>
            </Image.RenderTransform>
        </Image>
       

        <MediaElement x:ConnectionId='2' x:Name="pd" AutoPlay="False" Source="Assets/piano_D.mp3"></MediaElement>
        <MediaElement x:ConnectionId='3' x:Name="pds" AutoPlay="False" Source="Assets/piano_D_sharp.mp3"></MediaElement>
        <MediaElement x:ConnectionId='4' x:Name="pg" AutoPlay="False" Source="Assets/piano_G.mp3"></MediaElement>
        <MediaElement x:ConnectionId='5' x:Name="pgs" AutoPlay="False" Source="Assets/piano_G_sharp.mp3"></MediaElement>
        <MediaElement x:ConnectionId='6' x:Name="pb" AutoPlay="False" Source="Assets/piano_B.mp3"></MediaElement>


    </Grid>
</Page>

